<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="85dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.09"
        android:layout_height="84dp"
        app:layout_constraintVertical_bias="0.52"
        app:layout_constraintRight_toLeftOf="@+id/actor"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        app:layout_constraintGuide_begin="246dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="246dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        app:layout_constraintGuide_begin="375dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="375dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        app:layout_constraintGuide_begin="490dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="490dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text=""
        android:layout_width="187dp"
        android:layout_height="35dp"
        android:id="@+id/actor"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="84dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.29000002" />

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView9"
        android:layout_width="84dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:text="@string/defaut_actor"
        android:layout_width="187dp"
        android:layout_height="35dp"
        android:id="@+id/textView5"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintVertical_bias="0.41000003" />

    <TextView
        android:text="@string/defaut_actor"
        android:layout_width="187dp"
        android:layout_height="35dp"
        android:id="@+id/textView6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.33" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="369dp"
        android:layout_height="205dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.25" />
</android.support.constraint.ConstraintLayout>